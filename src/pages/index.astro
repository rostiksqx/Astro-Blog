---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import PostCard from "../components/PostCard.astro";

const posts = await getCollection("posts");
---

<Layout title="Home page" description="Home page with posts">
  <div>
    <h1 class="flex justify-center text-3xl font-bold m-4">Posts</h1>
    <ul
      class="list-none text-blue-600 hover:text-blue-300 ml-5 transition-color ease-in-out duration-300"
    >
      <section
        class="grid grid-cols-1 sm:grid-cols-2 w-full md:grid-cols-3 gap-6 p-4 md:p-6"
      >
        {posts.map((post) => <PostCard post={post} />)}
      </section>
    </ul>
  </div>
</Layout>
