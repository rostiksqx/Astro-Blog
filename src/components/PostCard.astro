---
import { Image } from "astro:assets";

const { post } = Astro.props;

const firstImage = post.body.match(/!\[.*\]\((.*)\)/);
const imagePath = firstImage
    ? firstImage[1].replace("../..", "src")
    : "/photo.jpg";
---

<div
    class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300"
>
    <a class="block" href={`/posts/${post.slug}`}>
        <!-- <Image src={imagePath} alt="lox" width={32} height={32} /> -->
        <img
            src={imagePath}
            alt="Blog Post 1"
            width="300"
            height="200"
            class="w-full h-48 object-cover"
            style="aspect-ratio: 300 / 200; object-fit: cover;"
        />
        <div class="p-4">
            <h3 class="text-xl font-bold mb-2">{post.data.title}</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-4">
                {post.body}
            </p>
            <p class="font-semibold text-primary">Read More</p>
        </div>
    </a>
</div>
