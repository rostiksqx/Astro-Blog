---
import { Image } from "astro:assets";
import { marked } from "marked";

interface Props {
  card: {
    id: string;
    slug: string;
    body: string;
    collection: string;
    data: { title: string; image: string };
  };
}

const { card }: Props = Astro.props;
const body = marked.parse(card.body);
---

<div
  class="group border border-[#3b2a22] h-full overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-transform duration-300 ease-in-out hover:-translate-y-2"
>
  <a class="absolute inset-0 z-10" href="#">
    <span class="sr-only">View</span>
  </a>
  <Image src={card.data.image} alt={card.data.title} width="300" height="200" />
  <div
    class="bg-[#3b2a22] text-[#e9d7cb] h-full flex-none flex-col w-full justify-between p-4"
  >
    <div>
      <h3 class="font-semibold text-xl">{card.data.title}</h3>
      <p class="text-sm line-clamp-2">
        <article set:html={body} />
      </p>
    </div>

    <h4 class="font-semibold text-lg md:text-xl">$14.99</h4>
  </div>
</div>
